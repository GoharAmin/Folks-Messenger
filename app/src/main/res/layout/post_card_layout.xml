<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/infoLayoutPostCard"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/white_round_border"
                android:layout_width="55dp"
                android:layout_height="55dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_smartphone"
                    android:id="@+id/postImagePostCard"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/postTitlePostCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackColor"
                    android:singleLine="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:text="Title Text" />

                <TextView
                    android:id="@+id/postTimePostCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightBlackColor"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="2/2/2020" />

            </LinearLayout>

        </LinearLayout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/postDescriptionPostCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:text="Description Text" />

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/dataLayout"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" >

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/oneImageLayout" >

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/oneImageLayoutImage"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_smartphone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/oneImageLayoutImagePlay"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/redColor"
                                    android:src="@drawable/ic_play_circle_filled_white_24dp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/twoImageLayout" >

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.48"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/twoImageLayoutImage1"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/twoImageLayoutImage1Play"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:tint="@color/redColor"
                                android:src="@drawable/ic_play_circle_filled_white_24dp" />
                        </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.04" />
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.48"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/twoImageLayoutImage2"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/twoImageLayoutImage2Play"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:tint="@color/redColor"
                                android:src="@drawable/ic_play_circle_filled_white_24dp" />
                        </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/threeImageLayout" >

                        <RelativeLayout
                            android:id="@+id/sdfds"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="115dp">

                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/threeImageLayoutImage1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <ImageView
                                        android:visibility="gone"
                                        android:id="@+id/threeImageLayoutImage1Play"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:tint="@color/redColor"
                                        android:src="@drawable/ic_play_circle_filled_white_24dp" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/sdfds"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="0.48"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/threeImageLayoutImage2"
                                        android:scaleType="centerCrop"
                                        android:adjustViewBounds="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <ImageView
                                        android:visibility="gone"
                                        android:id="@+id/threeImageLayoutImage2Play"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"
                                        android:tint="@color/redColor"
                                        android:src="@drawable/ic_play_circle_filled_white_24dp" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.04" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="0.48"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/threeImageLayoutImage3"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/threeImageLayoutImage3Play"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/redColor"
                                    android:src="@drawable/ic_play_circle_filled_white_24dp" />
                            </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="match_parent"
                        android:id="@+id/fourImageLayout" >

                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="0.48"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/fourImageLayoutImage1"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/fourImageLayoutImage1Play"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/redColor"
                                    android:src="@drawable/ic_play_circle_filled_white_24dp" />

                            </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.04" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="0.48"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/fourImageLayoutImage2"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/fourImageLayoutImage2Play"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/redColor"
                                    android:src="@drawable/ic_play_circle_filled_white_24dp" />
                            </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="0.48"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/fourImageLayoutImage3"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/fourImageLayoutImage3Play"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/redColor"
                                    android:src="@drawable/ic_play_circle_filled_white_24dp" />

                            </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.04" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="0.48"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/fourImageLayoutImage4"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_smartphone"
                                    android:adjustViewBounds="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/fourImageLayoutImage4Play"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/redColor"
                                    android:src="@drawable/ic_play_circle_filled_white_24dp" />

                                <RelativeLayout
                                    android:id="@+id/moreThanFourLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#99000000" />

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:tint="#fff"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_more_horiz_black_24dp" />

                                </RelativeLayout>

                            </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/likeIconPostCard"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/like_iccc" />

                            <TextView
                                android:id="@+id/likeNumberPostCard"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="@font/sf_pro_text"
                                android:text="0" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/commentIconPostCard"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/comment_iccc" />

                            <TextView
                                android:id="@+id/commentNumberPostCard"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="@font/sf_pro_text"
                                android:text="0" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>