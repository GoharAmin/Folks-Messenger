<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="80dp">

    <RelativeLayout
        android:id="@+id/parent_user_inbox_card"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_Image_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person"
            android:layout_centerVertical="true"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_Image_card"
            android:layout_toLeftOf="@id/last_Message_Time_card"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_Name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro_text"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/blackColor"/>

            <TextView
                android:id="@+id/last_Message_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello world!"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_text"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/lightBlackColor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/last_Message_Time_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_text"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/lightBlackColor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_marginLeft="78dp"
        android:layout_below="@id/parent_user_inbox_card"
        android:layout_width="match_parent"
        android:background="#44e5e5e5"
        android:layout_height="0.5dp" />

</RelativeLayout>