<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryBG"
    tools:context=".Fragments.UserProfileFragment">

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="150dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/imagelayout"
                android:layout_centerHorizontal="true"
                android:layout_width="120dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImageImg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/person_iccc"/>

                <ImageView
                    android:id="@+id/editImageImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_camera_alt_blue_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_below="@id/imagelayout"
                android:id="@+id/infoCard"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="40dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfd"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_person_white_24dp" />

                        <TextView
                            android:layout_toRightOf="@id/sdfd"
                            android:id="@+id/userNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="18sp"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/white"
                            />


                        <ImageView
                            android:id="@+id/editNameImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit_blue_24dp"
                            android:tint="@color/white"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfds"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_call_white_24dp" />

                        <TextView
                            android:id="@+id/userNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+9290078601"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_toRightOf="@id/sdfds"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="12dp"/>


                        <ImageView
                            android:id="@+id/editNumberImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit_blue_24dp"
                            android:tint="@color/white"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/lightWhite" />

                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfsd"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_info_white_24dp" />

                        <TextView
                            android:layout_toRightOf="@id/sdfsd"
                            android:id="@+id/userAboutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Using Whatsapp"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:layout_marginLeft="12dp"/>


                        <ImageView
                            android:id="@+id/editAboutImg"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit_blue_24dp"
                            android:tint="@color/white"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfsdsdf"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_info_white_24dp" />

                        <Switch
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/sdfsdsdf"
                            android:id="@+id/notifyGroupLeaving"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:text="Notify Group Leaving"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfsdsfdsdf"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_block_24" />

                        <Switch
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/sdfsdsfdsdf"
                            android:id="@+id/busyModeSwitch"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:text="Busy Mode"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:id="@+id/autoReplyLayout"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfsdsfsdfsdfdsdf"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_block_24" />

                        <Switch
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/sdfsdsfsdfsdfdsdf"
                            android:id="@+id/autoReplySwitch"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:text="Auto Reply"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:id="@+id/screenshotLayout"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfsdsfsdfsdfsdsdfdsdf"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_block_24" />

                        <Switch
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/sdfsdsfsdfsdfsdsdfdsdf"
                            android:id="@+id/screenshotPreventionSwitch"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:text="Prevent Screenshot"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:id="@+id/lastSeenLayout"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdflastseensfsdssss"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_last_seen_off_24" />

                        <Switch
                            android:id="@+id/lastSeenSwitch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hide Last Seen"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_toRightOf="@id/sdflastseensfsdssss"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:id="@+id/privacyLayout"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfdsdfsdfs"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_info_white_24dp" />

                        <TextView
                            android:id="@+id/privacyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_toRightOf="@id/sdfdsdfsdfs"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightWhite"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:id="@+id/contactUsLayout"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdfsfsdssss"
                            android:layout_width="25dp"
                            android:tint="@color/white"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_info_white_24dp" />

                        <TextView
                            android:id="@+id/contactUsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_toRightOf="@id/sdfsfsdssss"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>